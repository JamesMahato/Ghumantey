import javax.swing.*;
import javax.swing.text.StyleConstants;
import java.awt.*;

public class Login {
    public static void main(String[] args) {
        JPanel panel = new JPanel();
        JFrame frame = new JFrame();
        frame.setSize(525,300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.add(panel);

        panel.setLayout(null);
        //username text field
        JLabel label = new JLabel("Username");
        label.setBounds(10,30,90,20);
        panel.add(label);
        JTextField text = new JTextField(25);
        text.setBounds(90,30,150,20);
        panel.add(text);

        //password field
        JLabel plable = new JLabel("Password");
        plable.setBounds(10,90,90,20);
        panel.add(plable);
        JPasswordField pword = new JPasswordField("");
        pword.setBounds(90,90,150,20);
        panel.add(pword);

        //button
        JButton button = new JButton("LOG IN");
        button.setBounds(90,170,80,25);
        panel.add(button);

        frame.setVisible(true);

    }
}
